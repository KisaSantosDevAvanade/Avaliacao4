@model List<Tarefa>
@{
    ViewData["Title"] = "Tarefas Concluidas";
}

<h2>Lista de Tarefas Concluidas</h2>

<p>
    <a asp-action="Create">Adicionar Tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tarefa</th>
            <th>Status</th>
            <th>Inicio</th>
            <th>Conclusão</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            if (tarefa.StatusTarefa == "Concluida")
            {
                <tr>
                    <td>@tarefa.TarefaId</td>
                <td>@tarefa.TarefaNome</td>
                <td>@tarefa.StatusTarefa</td>
                <td>@tarefa.InicioTarefa</td>
                <td>@tarefa.ConclusaoTarefa</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tarefa.TarefaId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@tarefa.TarefaId">Deletar</a> |
                    <a asp-action="Details" asp-route-id="@tarefa.TarefaId">Detalhes</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>