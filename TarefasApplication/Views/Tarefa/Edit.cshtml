@{
}
@model Tarefa

<h2>Editar tarefa</h2>

<form asp-action="Edit" method="Post">
    <input type="hidden" asp-for="TarefaId" />
    <div class="form-group">
        <label asp-for="TarefaNome" class="control-label"></label>
        <input asp-for="TarefaNome" class="form-control" />
        <span asp-validation-for="TarefaNome" class="text-danger"></span>
    </div>
    <div class="form-check form-switch">
        <label asp-for="StatusTarefa" class="control-label"></label>
        <input asp-for="StatusTarefa" class="form-control" />
        <span asp-validation-for="StatusTarefa" class="text-danger"></span>
    </div>
    <div class="form-check">
        <label asp-for="ConclusaoTarefa" class="control-label"></label>
        <input asp-for="ConclusaoTarefa" class="form-control" />
        <span asp-validation-for="ConclusaoTarefa" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>