@{
}
@model Tarefa

<h2>Editar tarefa</h2>

<form asp-action="Edit" method="Post">
    <input type="hidden" asp-for="TarefaId" />
    <div class="form-group">
        <label asp-for="TarefaNome" class="control-label"></label>
        <input asp-for="TarefaNome" class="form-control" />
        <span asp-validation-for="TarefaNome" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="control-label mb-2" asp-for="StatusTarefa"></label>
        <select class="form-control" asp-for="StatusTarefa">
            <option value="Pendente" selected>Pendente</option>
            <option value="Concluida">Concluída</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>